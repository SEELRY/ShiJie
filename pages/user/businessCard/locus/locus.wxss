/* pages/user/locus/locus.wxss */
@import "/css/color/color.wxss";
@import '/pages/user/common.wxss';

.locusTabBox{height: 92rpx;}
.locusTabFiexd{background: #fff;position: fixed;top: 0;left: 0;right: 0;z-index: 1;line-height: 92rpx;text-align: center;justify-content: center;padding: 0 30rpx;font-size: 32rpx;}
.locusTabItem{flex: 1;}
.locusTabItem.active{font-weight: bold;position: relative;}
.locusTabItem.active::before{content: '';display: block;width: 40%;height: 3px;background: #09bb07;background: var(--mColor);position: absolute;bottom: 0;left: 30%;}
.locusTabItem.hover{background: #f2f2f2;}

/* AI轨迹 */
.locusContBox{padding: 30rpx;}
.locusContItem{margin-bottom: 30rpx;}
.locusContTime,.locusItemItem{font-size: 24rpx;color: #999;}
.locusItem{background: #fff;padding: 20rpx;border-radius: 10rpx;align-items: flex-start;margin-top: 20rpx;position: relative;}
.locusItemTag{font-size: 20rpx;background: #09bb07;padding: 2rpx 16rpx 2rpx 10rpx;line-height: normal;color: #fff;position: absolute;top: 0;left: 0;border-radius: 0 0 20rpx 0;}
.locusItemuser{width: 80rpx;height: 80rpx;border-radius: 50%;margin-right: 20rpx;}
.locusItemuser[src=""]{background: rgba(0, 0, 0, 0.1);}
.locusItemInfo{color: #09bb07;color: var(--mColor);}
.infoContBox{background: #fff;border-radius: 10rpx;padding:20rpx 0;margin-top: 20rpx;}
.infoContTit{padding: 0 30rpx;font-size: 32rpx;font-weight: bold;margin-bottom: 10rpx;}
.infoContTit .iconfont{font-weight: normal;font-size: 36rpx;margin-right: 8rpx;}
.infoItem{display: inline-block;width: 25%;text-align: center;font-size: 24rpx;color: #666;padding: 20rpx 0;}
.infoItemNum{font-size: 32rpx;font-weight: bold;color: #333;margin-top: 8rpx;}
.itemMoreIco{padding: 10rpx 20rpx;line-height: 1;color: #999;}
.itemMoreIco.hover{color: #333;background: #f2f2f2;}
.cardItemBox .infoItem{width: 33.33%;}
/* 更多操作 */
.operationPopCont{width: 50%;position: absolute;top: 50%;left: 50%;-webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);background: #fff;z-index: 991;border-radius: 12rpx;padding: 40rpx 0;text-align: center;}
.operationPopTips{line-height: 56rpx;font-size: 24rpx;color: #999;}
.operationItemBox{font-weight: bold;font-size: 36rpx;}
.operationItem{padding: 0 50rpx;line-height: 110rpx;}
.operationItem.hover{background: #f2f2f2;}
/* 标签设置弹窗 */
.settingPopCont{width: 560rpx;position: absolute;top: 50%;left: 50%;-webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);background: #fff;z-index: 991;border-radius: 12rpx;font-size: 32rpx;overflow: hidden;}
.settingPopTit{font-size: 36rpx;text-align: center;line-height: 100rpx;}
.settingTagCont{padding: 20rpx 30rpx;}
.settingPopBtnBox{line-height: 92rpx;text-align: center;}
.settingBtnItem{font-weight: bold;background: transparent;line-height: inherit;border-radius: 0;font-size: inherit;}
.settingBtnItem::after{display: none;}
.operationItem.hover,.settingBtnItem.hover{background: #f2f2f2;}
.settingTagInp{height: 200rpx;width: 100%;}
.settingBtnSure{color: #09bb07;color: var(--mColor);}
/* AI统计 */
.filterDateTime{background: #fff;font-size: 28rpx;padding: 0 20rpx;line-height: 40rpx;border-radius: 40rpx;align-self: center;position: relative;}
.filterDateTime .iconfont{color: #999;}
.filterDateTime.hover{background: #f8f8f8;}
.filterDatePop{position: absolute;top: 60rpx;right: 0rpx;background: #fff;width: 140rpx;border-radius: 6rpx;box-shadow: 0 4rpx 10rpx rgba(153, 153, 153, 0.2);text-align: center;transform-origin: 100rpx 0;transform: scale(.4);animation: filterDateShow .2s linear forwards;}
.filterDatePop::before{content: '';display: block;border-bottom: 12rpx solid #fff;border-left: 10rpx solid transparent;border-right: 10rpx solid transparent;position: absolute;top: 0;right: 40rpx;transform: translateY(-100%);}
.filterDateItem{line-height: 68rpx;}
@-webkit-keyframes filterDateShow{
  0%{transform: scale(.4);}
  100%{transform: scale(1);}
}
@keyframes filterDateShow{
  0%{transform: scale(.4);}
  100%{transform: scale(1);}
}

/* AI排行 */
.rankingBox{padding: 20rpx 30rpx 40rpx;}
.rankingItem{padding: 20rpx 30rpx 20rpx 10rpx;background: #fff;align-items: center;margin-bottom: 20rpx;border-radius: 6rpx;font-size: 32rpx;}
.rankingItemNum{width: 78rpx;text-align: center;font-weight: bold;font-size: 36rpx;margin-right: 10rpx;}
.rankingItem:nth-child(-n+3) .rankingItemNum{color: #09bb07;color: var(--mColor);}
.rankingItemImg{width: 80rpx;height: 80rpx;border-radius: 50%;margin-right: 20rpx;}
.rankingItemInfo{color: #999;font-size: 28rpx;}
.rankingItemInfoNum{color: #09bb07;color: var(--mColor);}

/* AI记录 */
.recordingItem{background: #fff;border-radius: 10rpx;overflow: hidden;margin-top: 20rpx;}
.recordingUserInfo{padding: 20rpx;align-items: center;}
.recordingMoreIco{display: inline-block;font-size: 24rpx;color: #999;padding: 10rpx 20rpx;transition: all .3s linear;}
.recordingMsgBox{padding: 10rpx 20rpx 16rpx;line-height: 1.4;font-size: 24rpx;color: #666;}
.recordingMsgItem{padding: 10rpx 0;}
.recordingMsgItem .locusItemItem{margin-left: 20rpx;}

.recordingUserInfo.active .recordingMoreIco{transform: rotate(180deg);}

.goods_name_color{color:red;}
.nickname_color{color: #09bb07;color: var(--mColor);}
