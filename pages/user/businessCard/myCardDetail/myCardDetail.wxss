/* pages/user/myCardDetail/myCardDetail.wxss */
@import '/wxParse/wxParse.wxss';
@import "/css/color/color.wxss";
@import '/pages/user/common.wxss';



.pageCont{padding: 30rpx;}
.contItemBox{background: #fff;border-radius: 10rpx;margin-bottom: 20rpx;}

.businessCard{background: #fff;border-radius: 10rpx;padding: 30rpx;align-items: center;}
.cardUserImg{width: 100rpx;height: 100rpx;border-radius: 50%;margin-right: 20rpx;}
.cardUserNametext{display: inline-block;font-size: 32rpx;font-weight: bold;max-width: 400rpx;vertical-align: middle;}
.cardUserTag{display: inline-block;font-size: 24rpx;color: #435d9e;padding: 0 10rpx;line-height: 36rpx;border-radius: 36rpx;background: #e9f0f4;margin-left: 20rpx;vertical-align: 2rpx;}
.cardCompany{color: #666;margin-top: 10rpx;line-height: 1.4;}

.operatingItem{padding: 30rpx 0;text-align: center;line-height: inherit;font-size: 28rpx;background: transparent;border-radius: 0;}
.operatingItem::after{display: none;}
.operatingItem .iconfont,.operatingItem .operatingNum{font-size: 56rpx;margin-bottom: 10rpx;line-height: 1;}

/* 名片信息 */
.cardInfoItem{padding: 26rpx 30rpx;}
.cardInfoItem::before{left: 30rpx;right: 30rpx;}
.cardInfoItem:last-child::before{display: none;}
.cardInfoMore{font-size: 24rpx;color: #666;}
.cardInfoTit{color: #666;}
.cardInfoCopy{align-self: center;font-size: 24rpx;color: #7387b5;margin-left: 20rpx;padding: 0 10rpx;border-radius: 40rpx;}
.cardInfoCopy.hover{background: #e9f0f4;}
.cardInfoIco{align-self: center;color: #09bb07;color: var(--mColor);font-size: 40rpx;margin-left: 20rpx;padding: 0 12rpx;}

/* 富文本信息 */
.myCardDetailCont{padding: 30rpx;line-height: 1.5;}

/* 侧边浮动 */
.asideFloatBox{height: 110rpx;margin-top: 40rpx;}
.asideFloatBtn{position: fixed;bottom: 40rpx;right: 30rpx;width: 110rpx;line-height: 110rpx;border-radius: 50%;text-align: center;background: #fff;box-shadow: 0 1rpx 13rpx rgba(148, 148, 148, 0.64);color: #09bb07;color: var(--mColor);}

/* 弹窗 */
.cardDetailPop{text-align: center;padding: 60rpx 30rpx;color: #333;}

.popupBox {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
}

.shade_bg {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
}

.modal {
    position: absolute;
    z-index: 1005;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    border-radius: 10rpx;
    width: 70%;
}

.modTit {
    text-align: center;
    color: #f66;
    font-weight: 700;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.inpBox {
    padding: 0 40rpx;
    margin-bottom: 50rpx;
}

.inp {
    height: 80rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #ccc;
}

.input-placeholder {
    font-size: 28rpx;
}

.ktBtn {
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 0;
    font-size: 30rpx;
    color: #fff;
    background-color: #09bb07;
}

.ktBtn::after {
    display: none;
}