/* 核销商品列表 */
.examItem{
  align-items: center;
  padding:  30rpx;
  background-color: #fff;
}
.commodityName{
  font-weight: 700;
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.useBtn{
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 0 44rpx;
  color: #fff;
  background-color: #0BC908;
  border-radius: 8rpx;
}
.useBtn:active{
  opacity: 0.85;
}
.creaseBox{
  align-items: center;
}
.crease{
  position: relative;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #0BC908;
}
.crease::before,.crease::after{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%); 
  transform: translate(-50%,-50%);
  background-color: #fff;
  width: 40%;
  height: 2rpx;
}
.increase::before{
  -webkit-transform:translate(-50%,-50%) rotate(90deg);
  transform:translate(-50%,-50%) rotate(90deg);
}
.count{
  padding: 0 25rpx;
  font-size: 32rpx;
}

