.copyright {
    text-align: center;
    line-height: 40px;
    height: 40px;
    margin-bottom: 10px;
}

.copyright-text {
    width: 100%;
    font-size: 28rpx;
}

.copyright-text::after {
    display: inline-block;
    border: 5px solid;
    border-color: transparent transparent transparent #ccc;
    content: "";
    margin-left: 10rpx;
}

.links .my-menu-item:active {
    background: rgba(0, 0, 0, 0.05);
}

.loading-icon {
    width: 72px;
    height: 72px;
}

.loading-icon+text {
    display: block;
}

.popupBox {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
}

.shade_bg {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
}

.modal {
    position: absolute;
    z-index: 1005;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    border-radius: 10rpx;
    width: 70%;
}

.modTit {
    text-align: center;
    color: #f66;
    font-weight: 700;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.inpBox {
    padding: 0 40rpx;
    margin-bottom: 50rpx;
}

.inp {
    height: 80rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #ccc;
}

.input-placeholder {
    font-size: 28rpx;
}

.ktBtn {
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 0;
    font-size: 30rpx;
    color: #fff;
    background-color: #09bb07;
}

.ktBtn::after {
    display: none;
}
