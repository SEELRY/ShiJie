@import "/css/color/color.wxss";
@import '../common.wxss';

page {
    font-size: 32rpx;
}

.fb {
    font-weight: bold;
}

/* 头部浮动元素 */

.user_content {padding: 0 30rpx;color: var(--userFontC, #fff);background: var(--userBg, var(--mColor));position: relative;overflow: hidden;-webkit-clip-path: ellipse(100% 54% at 50% 45%);clip-path: ellipse(100% 54% at 50% 45%);box-shadow: 0 1rpx 20rpx rgba(149, 147, 147, 0.21);}


.user-elem {
    width: 70rpx;
    height: 70rpx;
    position: absolute;
}

.user-elem:first-child {
    right: -30rpx;
    top: 10%;
}

.user-elem:nth-child(n+2) {
    left: -30rpx;
    bottom: 40%;
    transform: scale(0.8);
}

/* 个人信息 */
.Member_head {padding: 30rpx 0 60rpx 30rpx;align-items: center;}
.userinfo-avatar {width: 100rpx;height: 100rpx;border-radius: 50%;box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.5);margin-right: 30rpx}
.userinfo-avatar[src=""]{background: rgba(255, 255, 255, 0.3);}
.userinfo_name-box {font-size: 36rpx;}
.userinfo_name {max-width: 360rpx;display: inline-block;vertical-align: bottom;font-size: 36rpx;font-weight: bold;}
.tongbu-btn {display: inline-block;vertical-align: bottom;margin-left: 20rpx;font-size: 1.1em;}
.tellBinding{display: inline-block;font-size: 24rpx;background: rgba(255, 255, 255, 0.3);padding: 0 20rpx;line-height: 40rpx;border-radius: 40rpx;margin-top: 10rpx;}
/* 设置 */
.settingBtnIco{font-size: 40rpx;align-self: flex-start;padding: 0 20rpx;}

/* 开通会员 */
.vip-box {padding: 20rpx 30rpx;color: var(--userFontC,--mColorDark);border-radius: 12rpx 12rpx 0 0;background-image: linear-gradient(120deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.4));position: relative;box-shadow: 0 -5rpx 45rpx 0 rgba(0, 0, 0, 0.06), 1rpx 1rpx 0 rgba(255, 255, 255, 0.2) inset;}
.open-member {display: flex;align-items: center;}
.open-member-txt, .vip-balance {font-weight: bold;}
.open-member-txt .iconfont {font-size: 36rpx;margin-right: 10rpx;}
.open-member-btn {background: transparent;color: inherit;font-size: 12px;border: 1px solid;line-height: 26px;padding: 0 20rpx;border-radius: 6rpx;}
.open-member-btn::after {border: none;}

/* 二维码弹窗 */
.codePopBox{position: absolute;top: 50%;left: 50%;-webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);border-radius: 12rpx;padding: 30rpx;z-index: 991;text-align: center;background: #fff;width: 520rpx;}
.codePopImg{width: 360rpx;height: 360rpx;}
.codePopBtn{width: 360rpx;line-height: 68rpx;border-radius: 68rpx;background: #09bb07;background: var(--mColor);color: #fff;font-size: 28rpx;margin-top: 60rpx;}
.codePopBtn::after{display: none;}

/* 开通会员弹框 */
.open-member-pop {z-index: 2;}
.pop-cont {width: 600rpx;padding: 60rpx;background: #fff;border-radius: 10rpx;z-index: 1;}
.recharge-colse {position: absolute;right: 0;top: 0;background: var(--mColorLight);width: 78rpx;height: 78rpx;border-bottom-left-radius: 80%;}
.recharge-colse::before, .recharge-colse::after {content: '';display: block;width: 50%;height: 1px;background: #fff;position: absolute;right: 20%;top: 45%;transform: rotate(45deg);}
.recharge-colse::after {transform: rotate(-45deg);}
.recharge-colse:activeP {opacity: 0.8;}
.pop-tel-inp {margin-top: 20rpx;}
.pop-tel-inp, .pop-tel-check {height: 72rpx;
    padding: 0 30rpx;
    border: 1px solid var(--mColor);
    border-radius: 6rpx;
    font-size: 14px;
}

.get-code {
    display: inline-block;
    background: var(--mColor);
    color: #fff;
    font-size: 28rpx;
    border-radius: 6rpx;
}

.get-code:active, .pop-sure-btn:active {
    opacity: 0.8;
}

.get-code::after {
    border: none;
}

.pop-sure-btn {
    background: var(--mColor);
    color: #fff;
    font-size: 32rpx;
    border-radius: 6rpx;
    margin-top: 50rpx;
}

.pop-sure-btn::after {
    border: none;
}

.get-weixintel {
    color: var(--mColor);
    background: transparent;
    font-size: 36rpx;
    margin-top: 20rpx;
    border-radius: 6rpx;
    line-height: 78rpx;
}

.get-weixintel::after {
    border-color: currentColor;
    border-radius: 6rpx;
}

/* 我的工具 */
.myToolBox,.myCard{padding: 0 30rpx;margin-top: 20rpx;}
.myToolBoxTit,.myCardTit{font-weight: bold;line-height: 88rpx;}
.myToolCont{padding: 20rpx 30rpx; background: #fff;border-radius: 20rpx;}
.toolItem{display: inline-flex;width: 304rpx;align-items: center;padding: 36rpx 0;font-size: 28rpx;line-height: 1;}
.toolItem:not(:nth-child(2n)){margin-right: 22rpx;}
.toolItemIco{width: 68rpx;height: 68rpx;margin-right: 20rpx;}
.toolItemTips{font-size: 24rpx;color: #999;margin-top: 16rpx;}

/* 我的卡片 */
.projectBlockItem{background: #fff;border-radius: 20rpx;margin-bottom: 30rpx;}
.projectTit{padding: 0 30rpx;line-height: 100rpx;font-size: 28rpx;font-weight: bold;}
.projectTitIco{display: inline-block;font-size: 40rpx;font-weight: normal;line-height: 1;vertical-align: middle;margin-right: 20rpx;}
.projectListBox{padding-left: 90rpx;font-size: 28rpx;line-height: 90rpx;}
.projectListItem:last-child::before{display: none;}

/* 一行展示列表 */
.projectListLine{padding-left: 0;text-align: center;display: flex;display: -webkit-flex;line-height: 1.1;flex-wrap: wrap;}
.projectListLine .projectListItem{width: auto;flex: 1;padding: 20rpx 0;min-width: 25%;}
.projectListLine .iconfont {display: inline-block;font-size: 50rpx;margin-bottom: 20rpx;color: #333;}
.projectListItem:nth-child(n+5){width: 25%;flex: inherit;}

