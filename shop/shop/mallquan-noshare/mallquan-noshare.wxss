page{background: #fff;}
.topContenter{width:750rpx;padding:50rpx 0 40rpx;position: relative;}
.bgimg{width: 100%;height: 100%;position:absolute;top:0;left:0;}
.contenterBox{position: relative;color: #fff;text-align: center;}
.couponBox{color: #fd3744;}
.couponTop{width: 630rpx;height: 34rpx;background: #980f12;border: 8rpx solid #d12a2d;border-radius: 12rpx;margin: auto;}
.couponCont{width: 580rpx;background: #fff;margin: -18rpx auto 0;position: relative;border-radius: 0 0 12rpx 12rpx;box-shadow: -1rpx -1rpx 12rpx 1rpx rgba(254, 39, 57, 0.38);}

.couponCont::after{content: '';display: block;height: 40rpx;background-image: radial-gradient(#ff404c 40%, transparent 0);
background-size: 40rpx 40rpx;position: absolute;bottom: -20rpx;left: 0;right: 0;}
.couponName{padding:20rpx 0;position: relative;}
.couponName::before{content: '';display: block;border-bottom: 1px dashed #fd3744;position: absolute;left: 20rpx;right: 20rpx;bottom: 0;transform: scaleY(.5);transform-origin: bottom left;}
.couponMoneyBox{padding: 30rpx 0;}
.money{line-height:80rpx;height:80rpx;overflow:hidden;text-align:center;position:relative;}
.moneyNum{font-size:80rpx;font-weight:700;}
.couponTime{margin-top: 30rpx;}
.couponGetBtn{width:480rpx;margin:50rpx auto 0;background:#fdc606;color:#fff;font-weight: bold;font-size: 32rpx;line-height:80rpx;height:80rpx;border-radius: 4rpx;}
.couponGetBtn.button-hover{background:#ecbd11;}
.couponGetBtn::after{display: none;}
.couponBtnBox{padding: 0 60rpx;}
.shareBtn{line-height:80rpx;height:80rpx;background: transparent;color: #ecbd11;font-size: 32rpx;margin-top: 50rpx;border-radius: 4rpx;}
.shareBtn.button-hover{background: rgba(253, 55, 68, 0.1);}
.shareBtn::after{border-color: currentColor;border-radius: 8rpx;box-sizing: border-box;transform-origin: 0 0;}
.shareBtn:nth-child(n+2){margin-left: 30rpx;color: #fd3744;}
.shareBtn:only-child{width: 480rpx;margin: 50rpx 0 0;color: #fd3744;}
/* 活动说明 */
.notes{width:640rpx;margin:80rpx auto;border-radius:20rpx;border:1rpx solid #e9e9e9;padding:40rpx;color:#666;}
.note-content{padding:0 20rpx}
.note-title{margin-bottom: 20rpx;}
.note-list{display:block;margin-bottom:20rpx;padding-bottom: 8rpx;border-bottom:1rpx dashed #ddd;}