            <view class="ad-item" wx:for="{{item.config.imginfo['img-url']}}" wx:key="" wx:for-item="extraitem" wx:for-index="idx" bindtap="shop_ad_bind" data-url="{{item.config.imginfo['path'][idx]}}">
