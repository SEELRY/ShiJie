            <block wx:if="{{time[index].status != 2}}">
              <view class='seckillModeTitleDown'>
                <view class='seckillModeTitleDownText'>距{{time[index].status == 0?'开始':'结束'}}</view>{{time[index].hour}}:{{time[index].minute}}:{{sec}}</view>
