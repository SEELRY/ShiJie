/* pages/shop/business-address/index.wxss */
/* 引入公共样式 */
@import "/pages/shop/common/common.wxss";
.address-item{background: #fff;padding: 20rpx 30rpx;}
.shore-name{font-weight: bold;}
.shore-address{color: #666;}

page{
  line-height: 1.5;
}

.addressTopBox{width: 690rpx;margin: 30rpx auto 0;}
.addressTopItem{line-height: 80rpx;text-align: center;background: #fafafa;border-radius: 6rpx 6rpx 0 0;}
.addressTopItem:not(:last-child){margin-right: 20rpx;}
.addressTopItem.active{background: #fff;color: var(--DShop-mcolor);}

.addressContBox{width: 690rpx;margin: 0 auto 30rpx;}
.addressReturn{line-height: 80rpx;background: #fff;padding: 0 30rpx;font-size: 28rpx;border-radius: 0 0 6rpx 6rpx;}
.addressReturn .iconfont{font-size: 24rpx;color: #999;}
.addressSwitch{background: #fff;padding: 20rpx 30rpx;border-radius: 0 0 6rpx 6rpx;font-size: 28rpx;}
.addressSwitchBtn{text-align: center;margin-left: 20rpx;font-size: 24rpx;color: var(--DShop-mcolor);}
.addressSwitchBtn .iconfont{font-size: 40rpx;line-height: 1;margin-bottom: 6rpx;}
.addressSwitchCurrent{color: #f66;}

.currentAddress{color: #f66;font-size: 24rpx;margin-bottom: 20rpx;}
.addressItemTag{display: inline-block;padding: 0 20rpx;font-size: 24rpx;line-height: 48rpx;background: #fea512;color: #fff;border-radius: 0 50rpx 50rpx 0;margin-left: -30rpx;margin-bottom: 20rpx;}

.addressItemBox{background: #fff;border-radius: 6rpx;margin-top: 20rpx;padding: 20rpx 30rpx;}
.addressShopName{font-weight: bold;}
.addressShopName .iconfont{font-weight: normal;margin-right: 8rpx;color: #666;}
.addressText{font-size: 28rpx;color: #666;margin-top: 10rpx;}
.itemShopBox{margin-top: 20rpx;font-size: 28rpx;align-items: center;}
.itemShopLogo{width: 40rpx;height: 40rpx;border-radius: 50%;margin-right: 16rpx;}
.itemShopDistance{color: #f66;}
.addressShopBtn{line-height: 72rpx;border-radius: 72rpx;margin-top: 30rpx;font-size: 32rpx;width: 500rpx;}

/* 弹窗 */
.addressPopBox{z-index: 2;}
.popupCenter{position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);}
.addressPopCont{background: #fff;width: 600rpx;border-radius: 8rpx;padding: 50rpx 40rpx;z-index: 1;}
.addressPopBtnBox{margin-top: 60rpx;}
.addressPopBtn{font-size: 28rpx;padding: 0 10rpx;line-height: 72rpx;border-radius: 72rpx;}
.addressActiveBtn{background:#09bb07;background: var(--DShop-mcolor);color: #fff;}
.addressActiveBtn:active{background:#0bc908;background: var(--DShop-mcolor-leight);}
.addressPopBtn:not(:last-child){margin-right: 20rpx;}

.now{
  background: var(--DShop-mcolor) url(http://www.ixiaochengxu.cc/resource/images/shop/shequhead.png) right bottom no-repeat;
  background-size: contain;
  color: #fff;
  padding-bottom: 60rpx;
}
.desc{
  font-size: 28rpx;
  padding: 0 30rpx;
}
.nowAdress{
  font-size: 32rpx;
  line-height: 1.3;
}
.nowBox{
  align-items: center;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.edit{
  border: 1px solid #fff; border-radius: 100px;
  line-height:45rpx;
  font-size: 21rpx;
  padding: 0 20rpx;
  margin-left: 20rpx;
}
.items{
  padding: 50rpx 50rpx 50rpx 30rpx;
  border-top: 1px solid #f5f5f5;
  width: auto;
  position: relative;
}
.items:active{
  background: rgba(0, 0, 0, 0.05);
}
.items::before{
  right: 30rpx;
}

.items image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 100px;
  margin-right: 20rpx;
}
.juli{
  color: #f66;
  font-size: 25rpx;
  line-height: 51rpx;
  font-weight: normal;
  background: rgba(255, 102, 102, .1);
  position: absolute;
  top: 20rpx;
  left: 0;
  border-radius: 0 100px 100px 0;
  padding: 0 20rpx;
}
.julia{
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
}
.address{
  font-size: 28rpx;
  margin-top: 40rpx;
  text-align: center;
}
.address text{
  display: inline-block;
  text-align: left;
}
.teamName{
  font-weight: bold;
}

.commList{
  width: auto;
  border-radius:20rpx;
  color: #333;
  position: relative;
  z-index: 1;
  overflow: hidden;
}
.commList .items{
  background: #fff;
  margin:30rpx 50rpx;
  border-radius: 10rpx;
  border: none;
  padding: 100rpx 75rpx 50rpx;
}

.h2Title{
  padding: 30rpx 30rpx 0;
  font-weight: bold;
  text-align: center;
  position: relative;
}
.h2Title::after{
  content: "";
  display: block;
  position: absolute; bottom:5rpx; width: 20%;
  left: 40%; height: 15rpx;
  background: var(--DShop-mcolor);
  opacity: .2;
}
.infos2{
  align-items: center;
}
.btnbtn{
  background: var(--DShop-mcolor);
  color: #fff;
  border-radius: 100px;
  text-align: center;
  line-height: 76rpx;
  font-size: 32rpx;
  margin-top: 36rpx;
}