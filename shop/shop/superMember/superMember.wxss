/* pages/shop/superMember/superMember.wxss */
/* 引入富文本样式 */
@import "/wxParse/wxParse.wxss";
/* 引入公共样式 */
@import "/pages/shop/common/common.wxss";
page{background: #fff;}

.vipTopBg{background: #3a3d3d;text-align: center;padding-left: 30rpx;padding-right: 30rpx;padding-bottom: 80rpx;border-radius: 0 0 60% 60% / 0 0 30% 30%;margin-bottom: -80rpx;}
.vipTopBgImg{width: 100%;height: 110rpx;vertical-align: top;margin-bottom: -10rpx;}
/* 用户信息 */
.vipInfoBox{padding: 0 30rpx;}
.userInfoBox{background: #fff;box-shadow: 0.7rpx 4rpx 9rpx rgba(229, 229, 229, 0.53);padding: 40rpx 30rpx;align-items: center;border-radius: 4rpx;margin-bottom: 30rpx;}
.userInfoImg{width: 100rpx;height: 100rpx;border-radius: 50%;margin-right: 20rpx;}
.userInfoName{font-weight: bold;font-size: 32rpx;}
.userVipState{font-size: 24rpx;color: #999;margin-top: 6rpx;}
.userInfoMore{color: #999;font-size: 28rpx;}

/* 富文本内容 */
.vipDetailBox{padding: 20rpx 30rpx;}

/* vip 选择 */
/* 标题 */
.vipTitleText{display: flex;display: -webkit-flex;text-align: center;font-size: 36rpx;line-height: 92rpx;align-items: center;justify-content: center;}
.vipTitleText::before,.vipTitleText::after{content: '';display: inline-flex;width: 68rpx;height: 3px;background-image: linear-gradient(to right,rgba(255, 220, 82, 0),#d9c184);margin: 0 20rpx;}
.vipTitleText::after{transform: rotateY(180deg);}
/* 选项 */
.vipChooseBox{padding: 20rpx 30rpx 30rpx;}
.vipChooseItem{padding: 30rpx;border-radius: 4rpx;position: relative;align-items: center;line-height: 1;}
.vipChooseItem::before{content: '';display: block;width: 200%;height: 200%;border: 1px solid #d9c184;box-sizing: border-box;position: absolute;top: 0;left: 0;-webkit-transform: scale(.5);transform: scale(.5);-webkit-transform-origin: 0 0;transform-origin: 0 0;border-radius: 16rpx;pointer-events: none;}
.vipChooseItem:not(:last-child){margin-bottom: 30rpx;}
.vipChooseItem:active,.vipChooseItem.active{background: #fffcec;}
.vipItemChecked{position: absolute;top: 0;right: 0;color: #fff;display: none;}
.vipItemCheckedIco{display: block;line-height: 40rpx;position: relative;}
.vipItemChecked::before{content: '';display: block;border: 28rpx solid;border-color:  #d9c184 #d9c184 transparent transparent;position: absolute;top: 0;right: 0;}
.vipChooseItem.active .vipItemChecked{display: block;}
.vipItemTit{font-size: 28rpx;font-weight: bold;}
.vipItemPrice{width: 200rpx;text-align: center;line-height: 50rpx;height: 50rpx;padding: 0 10rpx;font-weight: bold;font-size: 28rpx;color: #90561d;background-image: linear-gradient( 90deg, #d9c184, #f3e0b0);border-radius: 50rpx;}
.vipItemTime{font-size: 24rpx;color: #999;margin-top: 20rpx;}

.vipBuyBtn{width: 640rpx;background-image: linear-gradient( 90deg, #d9c184, #f3e0b0);color: #90561d;font-size: 32rpx;font-weight: bold;line-height: 82rpx;border-radius: 82rpx;margin: 30rpx auto;}
.vipBuyBtn.button-hover{background: #e7d094;}
.vipBuyBtn::after{display: none;}
.vipBuyTips{font-size: 24rpx;color: #999;text-align: right;margin-top: 8rpx;}
.vipBuyBtnFiexd{position: fixed;bottom: 30rpx;left: 50%;transform: translateX(-50%);}

/* 激活弹窗 */
.activationPop{z-index: 1;}
.activationPop .floatBoxBg{display: block;}
.activationPopCont{width: 600rpx;border-radius: 4rpx;background: #fff;padding: 30rpx 50rpx 60rpx;z-index: 1;}
.activationPopImg{display: block;width: 120rpx;height: 120rpx;border-radius: 50%;margin: -80rpx auto 0;}
.activationPopTit{margin-top: 16rpx;font-weight: bold;text-align: center;color: #90561d;font-size: 32rpx;}
.activationPopMsg{margin-top: 6rpx;font-size: 28rpx;text-align: center;}
.activationPopTips{font-size: 28rpx;margin-top: 40rpx;}
.activationPopInpBox{padding: 0 20rpx;line-height: 90rpx;background: #f5f5f5;margin-top: 26rpx;border-radius: 4rpx;}
.activationPopInp{width: 100%;height: 90rpx;font-size: 26rpx;}
.activationPopBtn{margin-top: 50rpx;background: #d9c184;color: #fff;font-size: 30rpx;font-weight: bold;line-height: 90rpx;border-radius: 4rpx;}
.activationPopBtn.button-hover{background: #e7d094;}
.wxParse{background: #fff; margin: 0;}
.wxParse-p image{margin: 0 auto; display: block;}